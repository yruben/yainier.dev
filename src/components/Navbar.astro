---
import ThemeToggle from './ThemeToggle';
import LanguagePicker from './LanguagePicker';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="fixed top-0 left-0 w-full z-50 bg-light-bg/80 dark:bg-navy-900/80 backdrop-blur-md border-b border-gray-200 dark:border-white/10 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <div class="flex-shrink-0">
                <a href={`/${lang === 'en' ? '' : lang}`} class="text-2xl font-bold text-gray-900 dark:text-white transition-colors">
                    Yainier<span class="text-light-primary dark:text-neon-cyan">.com</span>
                </a>
            </div>
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-8">
                    <a href={`/${lang === 'en' ? '' : lang}`} class="text-gray-700 dark:text-gray-300 hover:text-light-primary dark:hover:text-neon-cyan px-3 py-2 rounded-md text-sm font-medium transition-colors">{t('nav.home')}</a>
                    <a href="#about" class="text-gray-700 dark:text-gray-300 hover:text-light-primary dark:hover:text-neon-cyan px-3 py-2 rounded-md text-sm font-medium transition-colors">{t('nav.about')}</a>
                    <a href="#projects" class="text-gray-700 dark:text-gray-300 hover:text-light-primary dark:hover:text-neon-cyan px-3 py-2 rounded-md text-sm font-medium transition-colors">{t('nav.projects')}</a>
                    <a href={`/${lang === 'en' ? 'blog' : `${lang}/blog`}`} class="text-gray-700 dark:text-gray-300 hover:text-light-primary dark:hover:text-neon-cyan px-3 py-2 rounded-md text-sm font-medium transition-colors">{t('nav.blog')}</a>
                    <a href={`/${lang === 'en' ? 'contact' : `${lang}/contact`}`} class="text-gray-700 dark:text-gray-300 hover:text-light-primary dark:hover:text-neon-cyan px-3 py-2 rounded-md text-sm font-medium transition-colors">{t('nav.contact')}</a>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <LanguagePicker client:idle currentLang={lang} />
                <ThemeToggle client:idle />
            </div>
        </div>
    </div>
</nav>
