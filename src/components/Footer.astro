---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gray-100 dark:bg-navy-900 border-t border-gray-200 dark:border-white/10 pt-16 pb-8 transition-colors duration-300">
    <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-8 mb-12">
            <div class="col-span-1 md:col-span-2">
                <a href={`/${lang === 'en' ? '' : lang}`} class="text-2xl font-bold text-gray-900 dark:text-white mb-4 inline-block">
                    Port<span class="text-light-primary dark:text-neon-cyan">folio</span>
                </a>
                <p class="text-gray-600 dark:text-gray-400 max-w-sm">
                    {t('footer.desc')}
                </p>
            </div>
            
            <div>
                <h4 class="text-gray-900 dark:text-white font-bold mb-4">{t('footer.links')}</h4>
                <ul class="space-y-2">
                    <li><a href="/" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">{t('nav.home')}</a></li>
                    <li><a href="#about" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">{t('nav.about')}</a></li>
                    <li><a href="#projects" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">{t('nav.projects')}</a></li>
                    <li><a href="/blog" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">{t('nav.blog')}</a></li>
                </ul>
            </div>

            <div>
                <h4 class="text-gray-900 dark:text-white font-bold mb-4">{t('footer.connect')}</h4>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">GitHub</a></li>
                    <li><a href="#" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">LinkedIn</a></li>
                    <li><a href="#" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">Twitter</a></li>
                    <li><a href="/contact" class="text-gray-600 dark:text-gray-400 hover:text-light-primary dark:hover:text-neon-cyan transition-colors">{t('nav.contact')}</a></li>
                </ul>
            </div>
        </div>
        
        <div class="border-t border-gray-200 dark:border-white/5 pt-8 text-center">
            <p class="text-gray-500 dark:text-gray-500 text-sm">
                &copy; {new Date().getFullYear()} Yainier. All rights reserved.
            </p>
        </div>
    </div>
</footer>
