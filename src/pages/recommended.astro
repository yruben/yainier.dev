---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../i18n/utils';

const t = useTranslations('en');
---

<BaseLayout title="Recommended - Yainier">
    <div class="pt-20 min-h-screen bg-light-bg dark:bg-navy-900">
        <section class="py-20">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
                        Recommended <span class="text-light-primary dark:text-neon-cyan">Resources</span>
                    </h1>
                    <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                        Tools, courses, and resources I recommend for developers
                    </p>
                    <div class="w-20 h-1 bg-light-primary dark:bg-neon-cyan mx-auto mt-6 rounded-full"></div>
                </div>

                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    <!-- Placeholder for recommended content -->
                    <div class="bg-white dark:bg-navy-800 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-white/5 hover:border-light-primary/50 dark:hover:border-neon-cyan/50 transition-all">
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Coming Soon</h3>
                        <p class="text-gray-600 dark:text-gray-300">
                            I'm curating a list of my favorite tools and resources. Check back soon!
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</BaseLayout>
