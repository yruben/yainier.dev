---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
---

<BaseLayout title="Projects - Yainier">
	<section>
		<h1 class="text-3xl font-bold text-gray-900 mb-8">Projects</h1>
		<div class="grid gap-8 sm:grid-cols-2">
			{allProjects.map((project) => (
				<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:border-gray-300 transition-colors">
					<h2 class="text-xl font-bold text-gray-900 mb-3">{project.data.title}</h2>
					<p class="text-gray-600 mb-4 h-20 overflow-hidden">{project.data.description}</p>
					<div class="flex flex-wrap gap-2 mb-6">
						{project.data.tags.map((tag) => (
							<span class="bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded-full">{tag}</span>
						))}
					</div>
					<div class="flex space-x-4">
						{project.data.githubUrl && (
							<a href={project.data.githubUrl} target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-gray-700 hover:text-black flex items-center">
								GitHub &rarr;
							</a>
						)}
						{project.data.liveUrl && (
							<a href={project.data.liveUrl} target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-blue-600 hover:text-blue-800 flex items-center">
								Live Demo &rarr;
							</a>
						)}
					</div>
				</div>
			))}
		</div>
	</section>
</BaseLayout>
